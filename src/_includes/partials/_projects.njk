<section>
  <h3 class="font-header font-semibold text-md uppercase mb-6 text-light-text">Recent Projects</h3>
  {% for item in projects %}
    <div
    class="border-t-4 border-t-stone-200 relative flex flex-wrap highlight p-4 lg:p-8 bg-no-repeat text-sm mb-6">
      <div class="lg:flex-1">
        <h4 class="font-bold">{{ item.industry }}</h4>
        <p class="w-full py-4">
          {{ item.details }}
        </p>
        <h5 class="font-semibold mb-2">ROLE: {{ item.role | join(', ') }}</h5>
        <ul class="pr-2">
          <li
            class="inline-block px-3 py-1 mr-1 mt-1 font-medium text-xs rounded-lg border border-stone-200">
            <span class="inline-block w-2 h-2 rounded-full mr-2 {% if item.status == 'current' %}bg-green-500{% else %}bg-stone-100{% endif %}"></span>Status: {{ item.status }}
          </li>
          {% for technologies in item.technologies %}
            <li
            class="inline-block px-3 py-1 mr-1 mt-1 font-medium text-xs rounded-lg border border-stone-200">
            {{ technologies }}
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  {% endfor %}
</section>
